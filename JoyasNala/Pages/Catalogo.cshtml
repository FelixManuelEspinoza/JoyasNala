@page
@using JoyasNala.Models
@model IEnumerable<Producto>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Catálogo de Productos</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .catalogo {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            padding: 20px;
        }

        .producto {
            margin: 15px;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
            width: 200px;
            text-align: center;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background-color: #fff;
        }

        .imagen-producto {
            max-width: 100%;
            height: auto;
            margin-bottom: 10px;
        }

        .boton-detalle {
            display: inline-block;
            margin-top: 10px;
            padding: 10px 15px;
            background-color: #007bff;
            border: none;
            border-radius: 5px;
            color: white;
            text-decoration: none;
            cursor: pointer;
        }

            .boton-detalle:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <h1>Catálogo de Productos</h1>
    <div class="catalogo">
        @foreach (var producto in Model)
        {
            <div class="producto">
                <img src="@producto.Imagen" alt="@producto.Nombre" class="imagen-producto" />
                <h2>@producto.Nombre</h2>
                <p>Precio: $@producto.Precio</p>
                <a href="/Productos/Details/@producto.Id" class="boton-detalle">Ver más</a>
            </div>
        }
    </div>
</body>
</html>
